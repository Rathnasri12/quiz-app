  <div class="alert alert-danger">
    <h4>Data Loading Error</h4>
    <p>Student data: <%= student ? 'Loaded' : 'Missing' %></p>
    <p>Questions data: <%= resultView ? 'Loaded' : 'Missing' %></p>
  </div>
<% } %>

